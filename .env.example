# Copy this file to .env and fill in your actual values

# Database
# Local: postgresql://username:password@localhost:5432/e3audio
# Neon:  postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/e3audio?sslmode=require
DATABASE_URL="postgresql://username:password@localhost:5432/e3audio"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"

# Sentry (Get this from https://sentry.io after creating a project)
SENTRY_DSN="https://your-sentry-dsn-here@sentry.io/project-id"

# Application
NODE_ENV=development
PORT=3000

# CORS - comma-separated allowed origins (optional, defaults to localhost + Vercel)
# For production (Render), set to your Vercel frontend URL:
# CORS_ORIGINS=https://e3-audio-uoc9.vercel.app,http://localhost:3000
CORS_ORIGINS=
